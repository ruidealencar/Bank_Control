<div class="page-header">
    <%= link_to new_account_path, class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span> New Account
        <% end %>
            <h1>Listing accounts</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Agency</th>
                <th>Account number</th>
                <th>Balance</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <%= content_tag_for(:tr, @accounts) do |account| %>
                <td>
                    <%= account.agency %>
                </td>
                <td>
                    <%= account.account_number %>
                </td>
                <td>
                    <%= account.balance %>
                </td>
                <td>
                    <%= link_to 'Show', account %>
                </td>
                <td>
                    <%= link_to 'Edit', edit_account_path(account) %>
                </td>
                <td>
                    <%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
                <% end %>
        </tbody>
    </table>
</div>