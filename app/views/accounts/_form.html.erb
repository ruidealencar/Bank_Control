<%= form_for(@account, html: { class: "form-horizontal", role: "form" }) do |f| %>
    <% if @account.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4>
                <%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h4>

            <ul>
                <% @account.errors.full_messages.each do |msg| %>
                    <li>
                        <%= msg %>
                    </li>
                    <% end %>
            </ul>
        </div>
        <% end %>
        <div class="form-group">
            <%= f.label :agency, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.collection_select :agency_id, Agency.all, :id, :agency_number, class: "" %>

                </div>
            </div>
            <div class="form-group">
                <%= f.label :account_number, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                        <%= f.text_field :account_number, class: "form-control" %>
                    </div>
            </div>
            <div class="form-group">
                <%= f.label :balance, class: "col-sm-2 control-label" %>
                    <div class="col-sm-10">
                        <%= f.text_field :balance, class: "form-control" %>
                    </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: "btn btn-primary" %>
                </div>
            </div>
            <% end %>